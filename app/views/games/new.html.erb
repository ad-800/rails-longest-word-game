<h1>Welcome to COUNTDOWN!</h1>
<h2>Here are your letters. Goodluck!</h2>
<p><%= @letters.join(' ') %></p>

<form action="/score" method="post" data-turbo="false">
  <label for="word">What is the longest word you can find?</label>
  <input id="word" type="text" name="word">
  <input type="submit" value="Submit">

  <%= hidden_field_tag :letter_list, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
